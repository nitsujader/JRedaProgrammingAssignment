<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="TextViewTitle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextViewNormal" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextViewCode" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ShowProductTextViewTitle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ShowProductTextViewNormal" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ShowProductTextViewSale" parent="android:Widget.TextView">
        <item name="android:textColor">@color/dark_red</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EditTextInvisible" parent="android:Widget.EditText">
        <item name="android:editTextColor">@color/transparent</item>
    </style>

</resources>
